{
	"manifest_version": 2,

	"name": "PeerFact",
	"description": "Check It before you Rep It!",
	"version": "0.3.1",
	"content_security_policy": "script-src 'self' https://www.peerfact.xyz; object-src 'self'",

	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

	"web_accessible_resources": [
		"PeerFactInjected.js",
		"PeerFactCommunicator.js",
		"jquery.js"
	],

	"permissions": [
		"storage"
	],

	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
		{
			"matches": ["*://*.facebook.com/*"],
			"css": ["PeerFact.css"],
			"js": [
				"jquery.js",
				"promise.js",
				"inject.js",
				"url.js",
				"fetch.js",
				"PeerFactPost.js",
				"PeerFactCommunicator.js",
				"PeerFact.js"
			]
		}
	]
}
